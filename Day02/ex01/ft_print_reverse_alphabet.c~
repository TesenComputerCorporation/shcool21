#include <unistd.h>

void	ft_putchar(char c);
void	ft_print_reverse_aplhabet(void);

void	ft_print_reverse_alphabet(void)
{
	int	i;

	i = 'z';
	while (i >= 'a')
	{
		ft_putchar(i);
		i -= 1;
	}
	ft_putchar('\n');
}
